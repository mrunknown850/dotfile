{
  "modules-left": [
    "custom/smallspacer",
    "hyprland/workspaces",
    "custom/spacer",
    "mpris"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "hyprland/submap",
    "group/expand",
    "custom/rclone",
    "idle_inhibitor",
    "battery",
    "network",
    "group/audio",
    "group/light",
    "clock"
  ],
  "bar_id": "bar-0",
  "position": "top",
  "ipc": true,
  // Custom Modules //
  "custom/rclone": {
    "exec": "~/.config/waybar/scripts/rclone-status.sh",
    "format": "{icon}",
    "on-click": "~/.config/waybar/scripts/manual-sync.sh",
