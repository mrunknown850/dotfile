  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "<span color='grey'>{status_icon} {dynamic}</span>",
    "max-length": 50,
    "player-icons": {
        "default": "‚è∏",
        "mpv": "üéµ"
    },
    "status-icons": {
        "paused": "‚ñ∂"
    }
    // "ignored-players": ["firefox"]
  },
  // Centre Modules //
  "hyprland/window": {
    "format": "<span  weight='bold' >{initialTitle}</span>",
    "max-length": 120,
    "icon": false,
    "icon-size": 13,
    "tooltip": true,
    "tooltip-format": "{title}"
  },
  // Left Modules //
  "battery": {
    "interval": 10,
    "states": {
     "warning": 15,
     "critical": 5
    },
    "format": "{icon}",
    "format-warning": "ÔÅ¨ <span color='white'>{icon}</span>",
    "format-critical": "<span color='#e78284'>Ôî∞</span>{icon}",
